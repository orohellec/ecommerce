<div class="page-titles title-dark pt30 pb20 mb70">
    <div class="container">
        <div class="row">
            <div class=" col-md-6">
                <h4><span>Shopping Cart</span></h4>
            </div>
            <div class=" col-md-6 mb0">
                <ol class="breadcrumb text-md-right">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container pb60">
    <h4 class="font300 mb30">
        <%= link_to 'Vider le panier', cart_path, class: "btn btn-dark float-right", method: :delete %>
    </h4>
    <table class="table table-condensed table-responsive cart-table mb40">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Product</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          <% @customer_items.each do |item| %>
            <tr>
                <td class="product-image">
                    <%= image_tag item.image_url %>
                </td>
                <td class="product-name"><a href="#"> <%= item.title %> </a></td>
                <td class="product-price"> <%= item.price %></td>
                <td class="product-total">
                    <%= item.price.to_s + " €" %>
                </td>

              <td class="product-delete"><%= link_to 'Supprimer', cart_path(item.id), method: :delete %></td>
          <!--      <td class="product-delete"><a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove this item"><i class="fa fa-times"></i></a></td> -->
            </tr>
          <% end %>
        </tbody>
    </table><hr class="mb40">
<div class="row">
<div class="col-sm-6">
<a href="/" class="btn btn-outline-secondary">Continuer les achats</a>
</div>
<div class="col-sm-6 text-right">
 <div class="pb20">
     <h3><small>Total - </small> <%= @total_price.to_s + " €" %> </h3>
 </div>
 
<%= button_to "Passer la commande", type: "button", class: "btn btn-primary btn-icon", action: "checkout" %>
</div>
</div>
</div>
